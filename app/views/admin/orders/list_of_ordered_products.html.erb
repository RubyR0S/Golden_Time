<h2>List of ordered Products</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">â„–</th>
      <th scope="col">Product Name</th>
      <th scope="col">Description</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @ordered_products.each do |product| %>
    <tr>
      <th scope="row"><%= product.product.id %></th>
      <td><%= product.product.name %></td>
      <td><%= product.product.description %></td>
      <td><%= Product.find(product.product.id).category.category_name %></td>
      <td><%= number_to_currency(product.product.price) %></td>
      <td>
        <%= form_for product, url: admin_order_path(product.id), method: :delete do |f| %>
          <%= f.hidden_field :product_id, value: product.product.id %>
          <%= f.submit 'Remove Item', class: 'btn btn-danger' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Admin Page', admin_orders_path, class: 'btn btn-primary' %>