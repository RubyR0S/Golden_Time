<%= form_with model: [:admin, order] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label"> 
      <%= f.label :first_name %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :first_name, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label"> 
      <%= f.label :last_name %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :last_name, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label"> 
      <%= f.label :address %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :address, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label"> 
      <%= f.label :phone_number %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :phone_number, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label"> 
      <%= f.label :pay_type %>
    </div>
    <div class="col-sm-10">
      <%= f.select :pay_type, Order::PAYMENT_TYPES, class: 'form-select form-select-lg' %> 
    </div>
  </div>
  <%= f.submit 'Save changes', class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to 'Back to Admin Page', admin_orders_path, class: 'btn btn-primary' %>
