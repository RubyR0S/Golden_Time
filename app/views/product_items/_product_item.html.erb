<% if product_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td><%= product_item.quantity %>&times;</td>
  <td><%= product_item.product.name %></td>
  <td class="item_price"><%= number_to_currency(product_item.total_price) %></td>
  <td><%= button_to 'Remove Item', product_item, method: :delete %></td>
</tr>